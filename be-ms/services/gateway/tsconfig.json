{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@libs/*": ["src/shared/libs/*"],
      "@providers/*": ["src/app/providers/*"],
      "@constants/*": ["src/shared/constants/*"],
      "@shared/*": ["src/shared/*"]
    },
    "module": "commonjs",
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
